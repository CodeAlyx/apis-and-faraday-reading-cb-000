<h1>Search for Coffee Shops Near Me</h1>
<%= form_tag '/search' do %>
  <%= label_tag :zipcode %>
  <%= text_field_tag :zipcode %>
  <%= submit_tag "Search!" %>
<% end %>
<div>
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @venues %>
    <ul>
      <% @venues.each do |venue| %>
        <li>
          <%= venue["name"] %> | <%= venue["contact"]["formattedPhone"] ? venue["contact"]["formattedPhone"] : "No Phone on File" %><br />
          <%= venue["location"]["formattedAddress"].join(", ") %><br/>
          Checkins: <%= venue["stats"]["checkinsCount"] %>
        </li><br/>
      <% end %>
    </ul>
  <% end %>
</div>
